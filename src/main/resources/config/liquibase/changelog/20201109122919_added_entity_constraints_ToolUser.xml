<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity ToolUser.
    -->
    <changeSet id="20201109122919-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="tool_user_id"
                                 baseTableName="tool_user_job"
                                 constraintName="fk_tool_user_job_tool_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tool_user"/>

        <addForeignKeyConstraint baseColumnNames="job_id"
                                 baseTableName="tool_user_job"
                                 constraintName="fk_tool_user_job_job_id"
                                 referencedColumnNames="id"
                                 referencedTableName="job"/>
        
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="tool_user"
                                 constraintName="fk_tool_user_company_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>

    </changeSet>
</databaseChangeLog>
